source 'https://rubygems.org'
gemspec :path => "../../"

# The version of CukeModeler being tested
gem 'cuke_modeler', '~> 1.0'

# Gherkin 6.x is the earliest version to have Rules, which some tests use
gem 'gherkin', '>= 6.0'

# Cucumber 3.x switches to needing the `cucumber-gherkin` gem, which is incompatible with `cuke_modeler` 1.x
gem 'cucumber', '< 4.0.0'
